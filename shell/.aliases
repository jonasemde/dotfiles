# Defaults
alias np="source ~/.zshrc"
alias dotfiles="subl ~/.dotfiles"
alias .="dotfiles"
alias .dotfiles="dotfiles"
alias hosts="subl /etc/hosts"
alias sshkey="cat ~/.ssh/id_rsa.pub | pbcopy && echo 'Copied to clipboard.'"
alias fresh='clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias c='fresh'
alias f='fresh'
alias ls='ls -laF'
alias l="ls -laF"
alias g="grep '|'' ./* -R"
alias wget="curl -O"
alias h="cd ~/"
alias s="cd ~/Sites/"
alias update="brew upgrade && brew upgrade --cask && sudo npm update -g && npm install -g npm && composer global update"
alias p="phpunit"
alias pf="phpunit --filter "
alias pw="phpunit-watcher watch"
alias pwf="phpunit-watcher watch --filter "

# Tool replacements
alias p1='ping -c1'

# PHP
alias uphp71='ln -sfn ~/.dotfiles/bin/php71 ~/.dotfiles/bin/php && clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias sphp71='uphp71'
alias uphp72='ln -sfn ~/.dotfiles/bin/php72 ~/.dotfiles/bin/php && clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias sphp72='uphp72'
alias uphp73='ln -sfn ~/.dotfiles/bin/php73 ~/.dotfiles/bin/php && clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias sphp73='uphp73'
alias uphp74='ln -sfn ~/.dotfiles/bin/php74 ~/.dotfiles/bin/php && clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias sphp74='uphp74'
alias uphp75='ln -sfn ~/.dotfiles/bin/php75 ~/.dotfiles/bin/php && clear; echo -e "\033c\e[3J" && source ~/.zshrc'
alias sphp75='uphp75'

# NPM, Composer & Laravel
alias lu='lucid'
alias el='envoy run list'
alias nw='npm run watch'
alias np='npm run production'
alias nd='npm run dev'
alias cu='composer update'
alias ci='composer install'
alias cda='composer dump-autoload -o'
alias ccc='composer clear-cache'
alias cgu='composer global update'
alias amf='php artisan migrate:fresh'
alias amfs='php artisan migrate:fresh --seed'
alias amr='php artisan migrate:refresh'
alias amrs='php artisan migrate:refresh --seed'
alias ac='acc && avc && aconfig-clear'
alias acc='php artisan cache:clear'
alias avc='php artisan view:clear'
alias aconfig-clear='php artisan config:clear'
alias arl='php artisan route:list'
alias homestead='function __homestead() { (cd ~/Homestead && vagrant $*); unset -f __homestead; }; __homestead'
alias vm="homestead up && homestead ssh"
alias a='function __artisan() { php artisan "$@" }; __artisan'
alias c='function __composer() { php composer "$@" }; __composer'
alias npmr='function __npm() { npm run "$@" }; __npm'
alias y='function __yarn() { yarn "$@" }; __yarn'

# Magento
alias m='./magento'
alias mce='./magento cache:enable'
alias mcd='./magento cache:disable config layout block_html full_page'
alias mthe='./magento dev:template-hints:enable && mcc'
alias mthd='./magento dev:template-hints:disable && mcc'
alias mcc='./magento cache:clean config layout block_html full_page'
alias mcf='./magento cache:flush config layout block_html full_page'
alias mss='rm -Rf ./pub/static/frontend && ./magento setup:static-content:deploy de_DE -f && mcc'

# Docker
alias dstart='docker-compose start'
alias dstop='docker-compose stop'
alias dbuild='docker-compose build'
alias dup='docker-compose up'
alias drm='docker rm $(docker ps -aq) --force'
alias drmi='docker rmi $(docker images -q) --force'
alias drmv='docker volume rm $(docker volume ls -q)'
alias drma='drm && drmi'

# git
alias nah='git reset --hard;git clean -df'
alias gc="git checkout"
alias gpo="git push origin"
alias gm="git merge"
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# Fast open
alias o="open ."

# PhpStorm
alias phpstorm='open -a /Applications/PhpStorm.app "`pwd`"'

# VScode
alias code='open -a "/Applications/Visual Studio Code.app" "`pwd`"'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# IP addresses
alias ip="ip4"
alias ip4="dig @ns1.google.com TXT o-o.myaddr.l.google.com +short -4"
alias ip6="dig @ns1.google.com TXT o-o.myaddr.l.google.com +short -6"
alias localip="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Flush Directory Service cache
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

# Lock the screen
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# Scrape webpage
alias scrape="scrapeUrl"
